<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@drawable/lobo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:translationY="-65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Datos del Alumno"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="NOMBRE: Juan De Dios Francisco, Zanabria Perez"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="CODIGO: 017201665B"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="CARRERA: Ingenieria de Sistemas"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="UNIVERSIDAD: UAC"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/logo"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:shadowColor="#0B65AC"
        android:shadowRadius="20"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#F2F2F2"
        android:textColorHighlight="#020202"
        android:textColorHint="#5404E1"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />





</androidx.constraintlayout.widget.ConstraintLayout>